<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yjj.repairs.mapper.SysRepairMapper">
    
    <resultMap type="SysRepair" id="SysRepairResult">
        <result property="id"    column="id"    />
        <result property="phone"    column="phone"    />
        <result property="name"    column="name"    />
        <result property="reasons"    column="reasons"    />
        <result property="dormitoryAddress"    column="dormitory_address"    />
    </resultMap>

    <sql id="selectSysRepairVo">
        select id, phone, name, reasons, dormitory_address from sys_repair
    </sql>

    <select id="selectSysRepairList" parameterType="SysRepair" resultMap="SysRepairResult">
        <include refid="selectSysRepairVo"/>
        <where>  
            <if test="phone != null "> and phone = #{phone}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="reasons != null  and reasons != ''"> and reasons = #{reasons}</if>
            <if test="dormitoryAddress != null  and dormitoryAddress != ''"> and dormitory_address = #{dormitoryAddress}</if>
        </where>
    </select>
    
    <select id="selectSysRepairById" parameterType="Long" resultMap="SysRepairResult">
        <include refid="selectSysRepairVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertSysRepair" parameterType="SysRepair" useGeneratedKeys="true" keyProperty="id">
        insert into sys_repair
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="phone != null">phone,</if>
            <if test="name != null">name,</if>
            <if test="reasons != null">reasons,</if>
            <if test="dormitoryAddress != null">dormitory_address,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="phone != null">#{phone},</if>
            <if test="name != null">#{name},</if>
            <if test="reasons != null">#{reasons},</if>
            <if test="dormitoryAddress != null">#{dormitoryAddress},</if>
         </trim>
    </insert>

    <update id="updateSysRepair" parameterType="SysRepair">
        update sys_repair
        <trim prefix="SET" suffixOverrides=",">
            <if test="phone != null">phone = #{phone},</if>
            <if test="name != null">name = #{name},</if>
            <if test="reasons != null">reasons = #{reasons},</if>
            <if test="dormitoryAddress != null">dormitory_address = #{dormitoryAddress},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSysRepairById" parameterType="Long">
        delete from sys_repair where id = #{id}
    </delete>

    <delete id="deleteSysRepairByIds" parameterType="String">
        delete from sys_repair where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>